// Navigation
nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container.px-4.px-lg-5
    a.navbar-brand(href='#!') AllCars
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0.ms-lg-4
        li.nav-item
          a.nav-link.active(aria-current='page' href='#!') Home
        li.nav-item
          a.nav-link(href='#!') For Sale
        li.nav-item
          a.nav-link(href='#!') Place Add
      form.d-flex
        button.btn.btn-outline-dark(type='button' style='background: rgb(0, 0, 0); color: rgb(255, 255, 255); margin-right: 5px;') Register
        button.btn.btn-outline-dark(type='button' style='background: rgb(255, 255, 255); color:rgb(11, 11, 11);') Login
// Header
header.bg-dark.py-5(style=' background-image: linear-gradient(#91ebf6, white);')
  .container.px-4.px-lg-5.my-5
    .text-center.text-white
      h1.display-4.fw-bolder(style='color: #2f2f2f;') AllCars
      p.lead.fw-normal.text-black-50.mb-0(style='color: #2f2f2f;') Find The Perfect Car For You!
section.vh-100.bg-image(style='background-color: white; ')
  .mask.d-flex.align-items-center.h-100.gradient-custom-3
    .container.h-100
      .row.d-flex.justify-content-center.align-items-center.h-100
        .col-12.col-md-9.col-lg-7.col-xl-6
          .card(style='border-radius: 15px; ')
            .card-body.p-5
              h2.text-uppercase.text-center.mb-5 Register
              form(action = '/register',method='post')
                .form-outline.mb-4
                  input#form3Example1cg.form-control.form-control-lg(type='text')
                  label.form-label(for='Name') Your Name
                .form-outline.mb-4
                  input#form3Example3cg.form-control.form-control-lg(type='email')
                  label.form-label(for='Email') Your Email
                .form-outline.mb-4
                  input#form3Example4cg.form-control.form-control-lg(type='password')
                  label.form-label(for='Password') Password
  
                .form-check.d-flex.justify-content-center.mb-5
                  input#form2Example3cg.form-check-input.me-2(type='checkbox' value='')
                  label.form-check-label(for='form2Example3g')
                    | I agree all statements in 
                    a.text-body(href='#!')
                      u Terms of service
                .d-flex.justify-content-center
                  button.btn.btn-primary.d-block.w-100(type='submit') Register
                p.text-center.text-muted.mt-5.mb-0
                  | Have already an account? 
                  a.fw-bold.text-body(href='#!')
                    u Login here
// Footer
footer.py-5.bg-dark(style='margin-top: 10em;')
  .container
    p.m-0.text-center.text-white Copyright &copy; Your Website 2022
