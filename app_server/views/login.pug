// Navigation
nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container.px-4.px-lg-5
    a.navbar-brand(href='#!') AllCars
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0.ms-lg-4
        li.nav-item
          a.nav-link.active(aria-current='page' href='#!') Home
        li.nav-item
          a.nav-link(href='#!') For Sale
        li.nav-item
          a.nav-link(href='#!') Place Add
      form.d-flex
        button.btn.btn-outline-dark(type='button' style='background: rgb(0, 0, 0); color: rgb(255, 255, 255); margin-right: 5px;') Register
        button.btn.btn-outline-dark(type='button' style='background: rgb(255, 255, 255); color:rgb(11, 11, 11);') Login
// Header
header.bg-dark.py-5(style=' background-image: linear-gradient(#91ebf6, white);')
  .container.px-4.px-lg-5.my-5
    .text-center.text-white
      h1.display-4.fw-bolder(style='color: #2f2f2f;') AllCars
      p.lead.fw-normal.text-black-50.mb-0(style='color: #2f2f2f;') Find The Perfect Car For You!
.row.d-flex.justify-content-center
  .col-md-6.col-xl-4
    .card.mb-5
      .card-body.d-flex.flex-column.align-items-center
        .bs-icon-xl.bs-icon-circle.bs-icon-primary.bs-icon.my-4(style='background-image: linear-gradient(#91ebf6, white); padding: 20px; border-radius: 5em;')
          svg.bi.bi-person(xmlns='http://www.w3.org/2000/svg' width='1em' height='1em' fill='currentColor' viewbox='0 0 16 16')
            path(d='M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z')
        h2.text-uppercase.text-center.mb-5 Login
        form.text-center(method='post')
          .mb-3
            input.form-control(type='email' name='email' placeholder='Email')
          .mb-3
            input.form-control(type='password' name='password' placeholder='Password')
          .mb-3
            button.btn.btn-primary.d-block.w-100(type='submit') Login
          p.text-muted Forgot your password?
// Footer
footer.py-5.bg-dark
  .container
    p.m-0.text-center.text-white Copyright &copy; Your Website 2022
